<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkBoxSamu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samu" />

        <CheckBox
            android:id="@+id/checkBoxPompier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Pompiers" />

        <CheckBox
            android:id="@+id/checkBoxAutre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autres utilisateurs " />
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <Spinner
            android:id="@+id/spinnerGasLeak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editTextgasValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gas Value"
            android:inputType="none"
            android:editable="false"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>